<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrioAdminApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="28" CornerRadius="0">
            <Label Text="PrioAdmin" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Login to your provider account" FontSize="Title" Padding="30,10,30,10"/>
		
		<Entry Placeholder="Email" />
		<Entry Placeholder="Password" IsPassword="True" />

		<Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Learn more at "/>
                        <Span Text="https://aka.ms/xamarin-quickstart" FontAttributes="Bold"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
		
		<Button Text="Login" Padding="57,10" HorizontalOptions="Center" />
		<Button Text="Sign-up" Padding="50,10" HorizontalOptions="Center" />
	</StackLayout>

</ContentPage>
