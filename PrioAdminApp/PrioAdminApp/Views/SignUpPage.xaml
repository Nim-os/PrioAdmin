<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrioAdminApp.Views.SignUpPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Sign up"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
			<Entry x:Name="name" Placeholder="Name" />
			<Entry x:Name="email" Placeholder="Email" />
			<Entry x:Name="password" Placeholder="Password" />
			
			<!--<Label Text="{Binding Source={x:Reference picker}, Path=SelectedItem}" /> -->
			<Picker x:Name="picker"
				Title="Select a role">
				<Picker.ItemsSource>
					<x:Array Type="{x:Type x:String}">
						<x:String>Urgence</x:String>
						<x:String>Coordo</x:String>
						<x:String>AIC</x:String>
						<x:String>Pediatre</x:String>
						<x:String>Infirmirary</x:String>
					</x:Array>
				</Picker.ItemsSource>
			</Picker>

			<Button Text="Sign Up" Clicked="OnSignUpButtonClicked" />
		</StackLayout>
    </ContentPage.Content>
</ContentPage>