<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrioAdminApp.Views.AddPatientPage">
    <ContentPage.Content>
        <StackLayout>
			<Frame>
				<Label Text="New Patient" FontSize="20" FontAttributes="Bold"
                HorizontalOptions="CenterAndExpand" />
			</Frame>
			
			<Entry x:Name="patientName" Placeholder="Patient's Name" Margin="10,0"/>
			
			<Button Text="Add Patient" Clicked="OnAddPatientClicked" 
					HorizontalOptions="Center" Margin="10"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>